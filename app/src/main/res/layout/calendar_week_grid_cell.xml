<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentView">

<!--    android:background="@color/weekCalendarBackground"-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:id="@+id/linearLayout">

        <TextView
                android:layout_marginTop="1dp"
                android:id="@+id/calendar_week_event_1"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:text="hello"
                android:textSize="10sp"
                android:textColor="#FCFFFF"
                android:textAlignment="textStart"
                android:paddingLeft="2dp"
                android:background="@color/eventCircleColor" />

        <TextView
                android:id="@+id/calendar_week_event_2"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:text="hello"
                android:textSize="10sp"
                android:paddingLeft="2dp"
                android:textColor="#FCFFFF"
                android:textAlignment="textStart"
                android:background="@color/eventCircleColor" />

        <TextView
                android:id="@+id/calendar_week_event_3"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:text="hello"
                android:textSize="10sp"
                android:paddingLeft="2dp"
                android:textColor="#FCFFFF"
                android:textAlignment="textStart"
                android:background="@color/eventCircleColor" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>